<%- include('../partials/header') %>

    <div class="mb-4">
        <a href="/posts" class="btn btn-secondary">&larr; Quay lại</a>
    </div>

    <h1 class="fw-bold mb-3">
        <%= post.title %>
    </h1>

    <p class="text-muted mb-4">
        <%= post.published ? '✅ Đã xuất bản' : '🚧 Nháp' %> &middot;
            <%= new Date(post.created_at).toLocaleString() %>
    </p>

    <div class="post-content">
        <%- post.content %> <!-- Render HTML from TinyMCE -->
    </div>

    <%- include('../partials/footer') %>